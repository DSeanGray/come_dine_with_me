<br>
<% if likeable.get_likes.count < likeable.nr_guests %>
  <%= form_tag likes_path(likeable_type: likeable.class.to_s, likeable_id: likeable.id), id: "im_going", remote: true do %>
    <% button_tag class: 'button' do %>
      I'm Going
    <% end %>
  <% end %>
<% end %>
  <br>
  <% if likeable.nr_guests == likeable.get_likes.count %>
    <span id="full_house">FULL HOUSE! Find another event to attend <a href="/events/">here</a>.</span><br><br>
  <% else %>
    <span id="going_count"><%= likeable.get_likes.count %> going</span><br>
    <span id="places_left"><%= likeable.nr_guests - likeable.get_likes.count %> places left</span><br><br>
  <% end %>
Users going to this event:<br>
<% likeable.get_likes.each do |goer| %>
  <% if goer.voter.profile %>
    <%= link_to goer.voter.name, profile_path(goer.voter.profile) %>
  <% else %>
    <%= goer.voter.name %>
  <% end %>
  <br />
<% end %>
